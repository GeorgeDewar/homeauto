
<h1>The Dewar's Super Duper Home Automation System</h1>

<h2>Heat Pump</h2>
<form class="form" method="post" action="/control">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="device" value="H" />
    <input id="temp" name="temperature" type="range" min="16" max="30" step="1" style="width: 400px;" />
    <input id="temp-val" type="text" style="width: 50px;" />
    <select name="mode">
        <option value="0">Auto</option>
        <option value="1">Cool</option>
        <option value="2">Dry</option>
        <option value="3">Fan</option>
        <option value="4">Heat</option>
    </select>
    <select name="fan">
        <option value="0">Auto</option>
        <option value="1">High</option>
        <option value="2">Medium</option>
        <option value="3">Low</option>
        <option value="4">Quiet</option>
    </select>
    <button class="btn btn-primary" type="submit" name="message" value="1">On</button>
    <button class="btn" type="submit" name="message" value="0">Off</button>
</form>

<h2>Electric Blanket</h2>
<form class="form" method="post" action="/control">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="device" value="S2" />
    <button type="submit" name="message" value="1">On</button>
    <button type="submit" name="message" value="0">Off</button>
</form>


